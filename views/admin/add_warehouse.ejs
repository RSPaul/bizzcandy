<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Add a warehouse</h2>
<a href="/admin/warehouses" class="btn btn-primary">Back to all warehouses</a>
<br><br>

<form method="post" action="/admin/warehouses/add-warehouse" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name" required>
    </div>

    <div class="form-group">
        <label for="">Image</label>
        <input type="file" class="form-control" name="image" required>
    </div>

    <div class="form-group">
        <label for="">Display</label>
        <input type="checkbox" class="form-control" name="display" >
    </div>
    
    <button class="btn btn-primary">Submit</button>
</form>

<%- include('../_layouts/adminfooter') %>