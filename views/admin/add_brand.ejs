<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Add a brand</h2>
<a href="/admin/brands" class="btn btn-primary">Back to all brands</a>
<br><br>

<form method="post" action="/admin/brands/add-brand" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name" required>
    </div>

    <div class="form-group">
        <label for="">Warehouse</label>
        <select name="warehouse" class="form-control" required>
        	<option value="">Select Warehouse</option>
        	<% warehouses.forEach(function(warehouse){ %>
                <option value="<%= warehouse.slug %>"><%= warehouse.name %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="">Image</label>
        <input type="file" class="form-control" name="image" >
    </div>
    
    <button class="btn btn-primary">Submit</button>
</form>

<%- include('../_layouts/adminfooter') %>