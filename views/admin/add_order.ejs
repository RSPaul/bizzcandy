<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Add an order</h2>
<a href="/admin/orders" class="btn btn-primary">Back to all orders</a>
<br><br>

<form method="post" action="/admin/orders/add/order" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="">Select User</label>
        <select name="user" class="form-control" required>
            <option value="">select user</option>
            <% users.forEach(function(user){ %>
                <option value="<%= user._id %>"><%= user.name %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="">Choose CSV&nbsp;<span><a class="anchor" href="/assets/create-order-sample.csv" download>(Click here to download sample CSV file)</a></span></label>
        <input type="file" name="file" required accept=".csv">
    </div>
    
    <button class="btn btn-primary">Submit</button>
</form>

<%- include('../_layouts/adminfooter') %>