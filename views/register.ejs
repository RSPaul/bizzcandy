<% include _layouts/header %>

    <!-- Main component call to action -->
    <div class="container main-container headerOffset">
        <div class="row">

            <!--left column-->

            <div class="col-lg-3 col-md-3 col-sm-12">
                <%# include _layouts/sitenav.ejs %>
            </div>

            <!--right column-->
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h1><%= title %></h1>

                    <form method="post" action="/users/register">

                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Name" value="<%= data.name%>" >
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" class="form-control" placeholder="Email" value="<%= data.email%>" >
                        </div>
                        <div class="form-group">
                            <label>Telephone</label>
                            <input type="text" name="telephone" class="form-control" placeholder="Telephone" value="<%= data.telephone%>" >
                        </div>

                        <div class="form-group">
                            <label>Address Line 1</label>
                            <input type="text" name="address_line1" class="form-control" placeholder="Address Line 1" value="<%= data.address_line1%>" >
                        </div>

                        <div class="form-group">
                            <label>City</label>
                            <input type="text" name="city" class="form-control" placeholder="City" value="<%= data.city%>" >
                        </div>

                        <div class="form-group">
                            <label>County</label>
                            <input type="text" name="county" class="form-control" placeholder="County" value="<%= data.county%>" >
                        </div>

                        <div class="form-group">
                            <label>Postcode</label>
                            <input type="text" name="postcode" class="form-control" placeholder="Postcode" value="<%= data.postcode%>" >
                        </div>

                        <div class="form-group">
                            <label>Country</label>
                            <input type="text" name="country" class="form-control" placeholder="Country" value="<%= data.country%>" >
                        </div>                         
                                                
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="username" class="form-control" placeholder="Username" value="<%= data.username%>" >
                        </div>
                        
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Password" value="<%= data.password%>" >
                        </div>
                        
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" name="password2" class="form-control" placeholder="Confirm Password" value="<%= data.password2%>" >
                        </div>

                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>

            </div>
            <!--/right column end-->
            <div class="col-lg-3 col-md-3 col-sm-12">
                <%# include _layouts/sitenav.ejs %>
            </div>
        </div>
        <!-- /.row  -->
    </div>
    <!-- /main container -->

    <% include _layouts/footer %>