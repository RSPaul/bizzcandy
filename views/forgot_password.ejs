<% include _layouts/header %>

    <!-- Main component call to action -->
    <div class="container main-container headerOffset">           

        <div class="row">

            <!--left column-->

            <div class="col-lg-3 col-md-3 col-sm-12">
                <%# include _layouts/sitenav.ejs %>
            </div>
            
            <!--right column-->
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h1></h1><%= title %></h1>
                
                <form method="post" action="/users/forgot">

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" placeholder="Email" required value="<%= email %>">
                    </div>
                
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </form>
                <br>
                  <p><a style="font-size: 16px; color: #7742F8" href="/users/login">Login?</a></p>
            </div>
            <!--/right column end-->
            <div class="col-lg-3 col-md-3 col-sm-12">
                <%# include _layouts/sitenav.ejs %>
            </div>
        </div>
        <!-- /.row  -->
    </div>
    <!-- /main container -->
  
<% include _layouts/footer %>